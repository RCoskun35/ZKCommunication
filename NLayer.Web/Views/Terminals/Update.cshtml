
@{
    ViewData["Title"] = "Update";
}
@model TerminalDto
<h1>Update Terminal</h1>

<div class="row">

    <div  class=col-md-6>

        <form asp-action="Update" method="post" asp-controller="Terminals">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


              <div class="form-group">
                <label asp-for="IpAdress"></label>
                <input asp-for="IpAdress" class="form-control" />
                <span asp-validation-for="IpAdress" class="text-danger"></span>
            </div>

               <div class="form-group">
                <label asp-for="Port"></label>
                <input asp-for="Port" class="form-control" />
                <span asp-validation-for="Port" class="text-danger"></span>
            </div>



            <div class="form-group">

                <input type="submit" value="Update" class="btn-primary" />

            </div>
        </form>



    </div>


</div>
