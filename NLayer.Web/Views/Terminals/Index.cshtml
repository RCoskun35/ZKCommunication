

@{
    ViewData["Title"] = "Index";
}
@model List<TerminalDto>
<a class="btn btn-primary" asp-controller="Terminals" asp-action="Save">Save Terminal</a>
    <table class="table table-striped">
        <thead>
            <tr>
            <td>Id</td>
            <td>IpAdress</td>
            <td>Port</td>
            <td>Name</td>
            <td>LastConnectDate</td>
            <td>CreatedDate</td>
            <td>Actions</td>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
               <td>@item.Id</td>
                <td>@item.Name</td>
                 <td>@item.IpAdress</td>
                  <td>@item.Port</td>
                   <td>@item.LastConnectDate</td>
                    <td>@item.CreatedDate</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Terminals" asp-action="Update" asp-route-id="@item.Id">Update</a>
                          <a class="btn btn-danger" asp-controller="Terminals" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                        </td>
                     </tr>
            }

        </tbody>



    </table>


