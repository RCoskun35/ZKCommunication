
@{
    ViewData["Title"] = "Update";
}
@model UserDto
<h1>Update User</h1>

<div class="row">

    <div  class=col-md-6>

        <form asp-action="Update" method="post" asp-controller="Users">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


              <div class="form-group">
                <label asp-for="UserRecNo"></label>
                <input asp-for="UserRecNo" class="form-control" />
                <span asp-validation-for="UserRecNo" class="text-danger"></span>
            </div>

               <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurName"></label>
                <input asp-for="SurName" class="form-control" />
                <span asp-validation-for="SurName" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="CardNo"></label>
                <input asp-for="CardNo" class="form-control" />
                <span asp-validation-for="CardNo" class="text-danger"></span>
            </div>



            <div class="form-group">

                <input type="submit" value="Update" class="btn-primary" />

            </div>
        </form>



    </div>


</div>
